{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": false,
    "experimentalDecorators": true,
    "lib": ["dom", "es2017"],
    "moduleResolution": "node",
    "module": "esnext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "es2017",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "jsxFactory": "h"
  },
  "include": [
    "components/src",
    "components/types/jsx.d.ts",
    "components/node_modules/@types/jest/index.d.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
