{
  "name": "@scania-sdds/components",
  "version": "1.0.1-1",
  "description": "In this repository we're developing the next generation components for Scania Digital Design System",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/scania-digital-design-system/sdds.git"
  },
  "module": "dist/collection/index.js",
  "main": "dist/collection/index.js",
  "collection": "dist/collection/collection-manifest.json",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public",
    "directory": "dist"
  },
  "scripts": {
    "start": "concurrently \"npm:watch-*\"",
    "watch-stencil": "npm run build -- --watch",
    "build": "npm run babel && npm run stencil --",
    "stencil": "stencil build --docs-json dist/data/docs.json",
    "babel": "mkdirp .build && babel src/helpers/index.js --out-file .build/index.js",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint-fix": "npm run lint -- --fix",
    "lint-debug": "npm run lint -- --debug",
    "test": "stencil test --spec --verbose",
    "test.watch": "stencil test --spec --e2e --watchAll",
    "generate": "stencil generate",
    "prepublishOnly": "npm run build",
    "watch-sb": "start-storybook -p 1339 --no-dll",
    "build-sb": "npm run build && build-storybook --no-dll"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/plugin-syntax-jsx": "^7.12.1",
    "@babel/plugin-transform-react-jsx": "^7.12.5",
    "@scania-sdds/theme-light": "^1.0.0-beta.2",
    "@stencil/core": "2.3.0",
    "@stencil/router": "1.0.1",
    "@stencil/sass": "1.3.2",
    "@stencil/store": "^1.3.0",
    "@storybook/addon-actions": "^6.0.28",
    "@storybook/addon-controls": "^6.0.28",
    "@storybook/addon-docs": "^6.0.28",
    "@storybook/addon-essentials": "^6.0.28",
    "@storybook/addon-links": "^6.0.28",
    "@storybook/addon-notes": "^5.3.21",
    "@storybook/web-components": "^6.0.28",
    "@types/jest": "^26.0.14",
    "@types/puppeteer": "^5.4.0",
    "babel-cli": "^6.26.0",
    "babel-loader": "^8.1.0",
    "babel-preset-es2015": "^6.24.1",
    "bootstrap": "4.3.1",
    "highlight.js": "9.16.2",
    "jest": "^26.6.2",
    "jest-cli": "^26.6.2",
    "jquery": "3.4.1",
    "js-cookie": "2.2.1",
    "jsx-dom": "^6.4.23",
    "lit-html": "^1.3.0",
    "mkdirp": "^0.5.1",
    "popper.js": "1.15.0",
    "puppeteer": "1.19.0",
    "react-is": "^17.0.1",
    "redux": "4.0.4",
    "rollup-plugin-dotenv": "0.2.0"
  },
  "license": "MIT",
  "dependencies": {
    "concurrently": "^5.3.0"
  }
}
